---
const { class: className, title, id } = Astro.props;
---

<style>
  .section-container {
    display: flex;
    flex-direction: column;
    row-gap: 1.25rem;
  }

  .section-title {
    font-size: 1.25rem;
    line-height: 1.75rem;
    font-weight: 600;

    @media (max-width: 768px) {
      position: sticky;
      z-index: 101;
      top: 1rem;
      max-width: 250px;
    }
  }

  .section-content {
    display: flex;
    flex-direction: column;
    row-gap: 0.75rem;
  }
</style>

<section id={id} class="section-container">
  <div class="section-title">
    {title}
  </div>
  <div class="section-content">
    <slot />
  </div>
</section>
