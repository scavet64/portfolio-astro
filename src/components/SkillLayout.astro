---
import Button from "./Button.astro";
const { title, skills } = Astro.props;
---

<style>
  .skill-layout-container {
    display: flex;
    flex-direction: column;
    row-gap: 0.5rem;
    justify-content: center;
    align-items: center;

    @media (min-width: 768px) {
      flex-direction: row;
      column-gap: 1.25rem;
      row-gap: 1.25rem;
      justify-content: start;
      align-items: start;
    }

    .skill-title {
      width: 100%;
      text-align: left;
      font-weight: 700;
      color: hsl(var(--foreground));

      @media (min-width: 768px) {
        text-align: left;
        width: 15%;
      }
    }

    .skill-button-container {
      display: flex;
      width: 90%;
      flex-direction: row;
      flex-wrap: wrap;
      column-gap: 1rem;
      row-gap: 0.5rem;
      @media (min-width: 768px) {
        width: 85%;
      }
    }
  }
</style>

<div class="skill-layout-container">
  <div class="skill-title">{title}</div>
  <div class="skill-button-container">
    {
      skills.map((skill: string[]) => (
        <Button as="button" title={skill} style="pill" />
      ))
    }
  </div>
</div>
