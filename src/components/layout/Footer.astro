<style>
  .footer {
    margin-left: auto;
    margin-right: auto;
    margin-top: 6rem;
    width: 100%;
  }

  .footer-container {
    border-top: 1px solid hsl(var(--border));
    padding-top: 1.25rem;
  }

  .footer-inner-container {
    display: flex;
    flex-direction: column;
    align-items: center;
    gap: 0.75rem;

    @media (min-width: 640px) {
      display: flex;
      flex-direction: row;
      align-items: center;
      justify-content: space-between;
      gap: 0;
    }
  }
  .legal {
    display: flex;
    gap: 1rem;
    font-size: 0.875rem;
  }

  .footer-social-brands-container {
    display: flex;
    align-items: center;
    justify-content: space-between;
  }

  .footer-social-brand {
    display: flex;
    align-items: center;
    gap: 1rem;
  }
  .footer-social-brand-link {
    display: inline-block;
    color: hsl(var(--muted-foreground));
    transition: all 0.3s;
  }
  .footer-social-brand-link:hover {
    color: hsl(var(--muted-foreground) / 75%);
  }
  .svg {
    height: 1rem;
    width: 1rem;
    flex-shrink: 0;
  }
</style>
