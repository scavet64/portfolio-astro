<style>
  .header {
    display: flex;
    padding-bottom: 0.75rem;
    margin-bottom: 3rem;
    flex-wrap: wrap;
    width: 100%;
    font-size: 0.875rem;
    line-height: 1.25rem;

    @media (min-width: 640px) {
      flex-wrap: nowrap;
      justify-content: flex-start;
    }
  }

  .nav {
    display: flex;
    position: relative;
    justify-content: space-between;
    align-items: center;
    width: 100%;

    @media (min-width: 640px) {
      display: flex;
      align-items: center;
    }
  }

  .resume-link {
    flex: none;
    font-size: 1.25rem;
    line-height: 1.75rem;
    font-weight: 600;
  }

  .link-container {
    display: flex;
    flex-direction: row;
    column-gap: 1.25rem;
    justify-content: center;
    align-items: center;

    @media (min-width: 640px) {
    }
  }

  .dark-mode-button {
    font-family: inherit;
    font-feature-settings: inherit;
    font-variation-settings: inherit;
    font-size: 100%;
    font-weight: inherit;
    line-height: inherit;
    color: inherit;
    margin: 0;

    background-image: none;
    text-transform: none;
    position: relative;
    border-radius: calc(var(--radius) - 2px);
    border-width: 1px;
    padding: 0.375rem;
    --tw-background-opacity: 1;
    border-color: hsl(var(--border) / var(--tw-background-opacity));
    transition-property: all;
    transition-timing-function: cubic-bezier(0.4, 0, 0.2, 1);
    transition-duration: 0.15s;
    cursor: pointer;
    background-color: transparent;
    -webkit-box-shadow: none;
    -moz-box-shadow: none;
    box-shadow: none;
    border-style: solid;
  }
  .dark-mode-button:hover {
    --tw-bg-opacity: 1;
    background-color: hsl(var(--border) / var(--tw-bg-opacity));
    box-shadow: none;
  }
  .dark-theme-icon:dark {
    --transform-scale-x: 0;
    --transform-scale-y: 0;
  }

  .sr-only {
    position: absolute;
    width: 1px;
    height: 1px;
    padding: 0;
    margin: -1px;
    overflow: hidden;
    clip: rect(0, 0, 0, 0);
    white-space: nowrap;
    border-width: 0;
  }

  .dark-theme-icon {
    transition-property: all;
    transition-timing-function: cubic-bezier(0.4, 0, 0.2, 1);
    transition-duration: 300ms;
    --transform-scale-x: 1;
    --transform-scale-y: 1;
    --transform-rotate: 0;
    height: 1.2rem;
    width: 1.2rem;
    vertical-align: middle;
  }

  .light-theme-icon {
    transition-property: all;
    transition-timing-function: cubic-bezier(0.4, 0, 0.2, 1);
    transition-duration: 300ms;
    --transform-scale-x: 0;
    --transform-scale-y: 0;
    --transform-rotate: 90deg;
    height: 1.2rem;
    width: 1.2rem;
    vertical-align: middle;
  }
</style>
<header class="header">
  <nav class="nav" aria-label="global">
    <a class="resume-link" href="/" aria-label="Brand">Resume</a>

    <div class="link-container">
      <!-- <a
        href="/blog"
        class="flex-none text-[1.05rem] font-medium hover:text-foreground/75"
        aria-label="Nav Menu Item"
        >Blog
