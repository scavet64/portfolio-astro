---
import Layout from "../layouts/Layout.astro";
import Section from "../components/Section.astro";
import Card from "../components/Card.astro";
import ProjectCard from "../components/ProjectCard.astro";
import SkillLayout from "../components/SkillLayout.astro";

import { Image } from "astro:assets";
import astro from "../assets/about-astro.png";
import logo from "../assets/scavettapps-logo.svg";
import Label from "../components/Label.astro";

import supernova from "../assets/icons/supernovaMaybe.svg"
import animalCrossing from "../assets/icons/animal-crossing.svg"
import incrediball from "../assets/icons/beach-ball.svg"

import noisebean from "../assets/icons/noisebean.png"
import checkers from "../assets/icons/checkers.png"
import win32Helper from "../assets/icons/win32-library.png"

const languages = ["C#", "Java", "Typescript", "Javascript", "Python", "SQL"];
const frontend = ["React", "Redux-Saga", "React Native", "GatsbyJS", "Astro"];
const desktop = ["Electron", "Maui", "XAML", "WPF"];
const backend = [
  "Dotnet",
  "Entity Framework",
  "ASPNet",
  "Spring Boot",
  "DataJPA",
];
const cloud = ["AWS", "Serverless", "Microservices", "CI/CD"];
const tools = [
  "Visual Studio",
  "VSCode",
  "Figma",
  "Unity 3D",
  "Unreal",
  "Adobe Suite",
  "Ableton",
  "Stable Diffusion",
];
const others = ["Docker", "FFMPEG", "CUDA", "Git"];
---

<style>
  .layout-container {
    display: flex;
    flex-direction: column;
    row-gap: 2.5rem;
    width: 100%;
    background: hsl(var(--background));
    color: hsl(var(--foreground));
  }

  .text-muted-foreground {
    --tw-text-opacity: 1;
    color: hsl(var(--muted-foreground) / var(--tw-text-opacity));
  }

  .margin-0 {
    margin: 0px;
  }

  .experience-list {
    margin: 0px;
    margin-left: -1rem;
    list-style-type: disc;
  }

  .sub-list {
    list-style-type: circle;
  }

  .project-container {
    display: flex;
    flex-direction: column;
    row-gap: 0.75rem;

    @media (min-width: 640px) {
      display: grid;
      grid-template-columns: 1fr 1fr;
      column-gap: 1rem;
      row-gap: 1rem;
    }
  }

  .project-image {
    width: 100%;

    @media (min-width: 640px) {
      width: 50%;
    }
  }

  .top-container {
    display: flex;
    flex-direction: column;
    align-items: center;
    gap: 1.75rem;
  }

  .top-container-image {
    background-color: transparent;
  }

  .top-container-sub-container {
    display: flex;
    flex-direction: column;
    align-items: center;
    gap: 1rem;
  }
  .top-container-name {
    font-size: 1.875rem;
    font-weight: bold;
  }
  .top-container-sub-container-sub-container {
    display: flex;
    flex-wrap: wrap;
    justify-content: center;
    gap: 1.75rem 3.5rem;
  }
  .top-container-svg {
    height: 1.25rem;
    width: 1.25rem;
  }
  .muted-foreground-color {
    color: hsl(var(--muted-foreground) / 75%);
  }
</style>
<Layout title="Welcome to Astro.">
  <div class="layout-container">
    <section class="top-container">
      <Image
        src={logo}
        alt="profile photo"
        class="top-container-image"
        loading="eager"
      />

      <div class="top-container-sub-container">
        <h1 class="top-container-name">Vincent Scavetta</h1>
        <div class="top-container-sub-container-sub-container">
          <Label title="Software Engineer III">
            <svg
              xmlns="http://www.w3.org/2000/svg"
